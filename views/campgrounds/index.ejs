<% include ../partials/header %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>View our hand picked campgrounds from all over the world.</p>
                <p>
                    <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
                </p>
            </div>
        </header>
        <div class="d-flex flex-row flex-wrap justify-content-around">
            <% campgrounds.forEach(function(camp){ %>
                <div class="card" style="margin-bottom:10px;width:18rem;align-items: center">
                    <img class="card-img-top" src="<%= camp.image %>" alt="Card image cap" style="width:18rem; height: 15rem">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.name%>
                        </h5>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>

                <% }) %>
        </div>
    </div>


    <% include ../partials/footer %>